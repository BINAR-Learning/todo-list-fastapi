{
  "name": "todo-list-frontend",
  "version": "1.0.0",
  "description": "Frontend for PT Erajaya Swasembada Todo List Application",
  "main": "index.html",
  "scripts": {
    "start": "http-server . -p 3000 -c-1",
    "build": "./build.sh",
    "lint": "npm run lint:css && npm run lint:js",
    "lint:css": "stylelint \"assets/css/**/*.css\"",
    "lint:js": "eslint \"assets/js/**/*.js\"",
    "lint:fix": "npm run lint:css -- --fix && npm run lint:js -- --fix",
    "test": "echo \"Tests will be implemented with testing framework\"",
    "serve": "serve dist -p 3000",
    "dev": "npm start"
  },
  "keywords": [
    "todo",
    "task-management",
    "frontend",
    "spa",
    "javascript",
    "pt-erajaya"
  ],
  "author": "PT Erajaya Swasembada",
  "license": "PROPRIETARY",
  "devDependencies": {
    "eslint": "^8.50.0",
    "eslint-config-standard": "^17.1.0",
    "http-server": "^14.1.1",
    "serve": "^14.2.1",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.20.0",
    "imagemin-cli": "^7.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}
